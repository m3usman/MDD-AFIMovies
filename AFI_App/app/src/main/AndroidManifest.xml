<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.muneeb.afi_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/AFI_App"
        android:supportsRtl="true"
        android:textSize="40sp"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.muneeb.afi_app.MainActivity"
            android:label="@string/AFI_App"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.muneeb.afi_app.SplashActivity"
            android:parentActivityName="com.example.muneeb.afi_app.MainActivity" />
        <activity
            android:name=".Splash"
            android:label="@string/title_activity_splash"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>